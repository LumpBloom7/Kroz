{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Build for 32-bit",
            "type": "shell",
            "command": "${workspaceRoot}/build32.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "taskName": "Build for 64-bit",
            "type": "shell",
            "command": "${workspaceRoot}/build64.bat",
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "dedicated"
            },
            "problemMatcher": [
                "$gcc"
            ]
        }
    ]
}
